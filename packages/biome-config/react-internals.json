{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["./library.json"],
  "linter": {
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true,
        "useButtonType": "error",
        "useKeyWithClickEvents": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "error",
        "noExplicitAny": "error"
      },
      "style": {
        "useShorthandArrayType": "error",
        "useTemplate": "error",
        "useImportType": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5"
    }
  }
}
